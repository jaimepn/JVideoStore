@model JVideoStore.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    // THIS IS AN EXAMPLE OF A CODE AREA WITHIN THE VIEW

    //if cust count > 0 then string "popular", otherwise null
    var className = Model.Customers.Count > 0 ? "popular" : null;
 }

@*This is an example of a conditional class*@
<h2 class="@className">@Model.Movie.Name</h2>

@*If movie has rent history, show for which customers otherwise show text*@
@if (Model.Customers.Count == 0)
{
    //<TEXT> is a razor tag, resulting in a paragraph
    <text>No one has rented this movie before</text>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
}

